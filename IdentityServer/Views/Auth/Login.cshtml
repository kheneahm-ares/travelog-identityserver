@model IdentityServer.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";

}
<div class="auth-form">
    <div class="main-div">
        <div class="panel">
            <h2>Travelog IDP Login</h2>
            <p>Please enter your username and password</p>
        </div>
        <form id="Login" asp-controller="Auth" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <input asp-for="Username" class="form-control" id="inputEmail" placeholder="Username">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>
            <div>
                <a class="return-link" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Register!</a>
            </div>
        </form>
    </div>
</div>